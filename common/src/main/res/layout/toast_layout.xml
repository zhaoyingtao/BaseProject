<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_100"
        android:background="@drawable/bg_toast_fillet_16"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_016"
        android:paddingRight="@dimen/margin_016">

        <ImageView
            android:id="@+id/iv_toast"
            android:layout_width="@dimen/margin_024"
            android:layout_height="@dimen/margin_024"
            android:layout_marginTop="@dimen/margin_024"
            android:src="@mipmap/toast_ok_white_icon" />

        <TextView
            android:id="@+id/tv_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_016"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

</LinearLayout>